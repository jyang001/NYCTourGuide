<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:dividerHeight="2dp"
    android:layout_weight="1" >

    <ImageView
        android:id="@+id/list_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src = "@drawable/museum_natural_history"/>

    <TextView
        android:id = "@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft = "8dp"
        android:textAllCaps="true"
        android:textColor = "@color/red"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"
        android:text = "@string/attraction_natural_history"/>

    <TextView
        android:id = "@+id/address"
        android:paddingLeft = "4dp"
        android:paddingRight = "4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/natural_history_address"/>

    <TextView
        android:id = "@+id/cost"
        android:paddingLeft = "4dp"
        android:paddingRight = "4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/natural_history_price"/>

    <TextView
        android:id = "@+id/description"
        android:paddingTop = "8dp"
        android:paddingLeft = "8dp"
        android:paddingRight = "8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/natural_history_description"/>

</LinearLayout>